<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/deviceInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tikrinu prietaisą..."
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/claimCodeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Įveskite priskyrimo kodą" />

    <Button
        android:id="@+id/claimButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pridėti prietaisą"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/unclaimButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pašalinti prietaisą"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

</LinearLayout>

